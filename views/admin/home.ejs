<html>
  <head>
    <title>
      Burger
    </title>
    <link href="/images/logo.png" rel="shortcut icon">
    <link rel="stylesheet" href="/stylesheets/home.css" type="text/css">
  </head>
  <body>
    <div class="homeWrapper">
      <% include menubar %>
      <div class="homeWrapper">
        <div class="topOffer">
          <div class="itemTitle"><span>Today's top offers</span></div>
          <% for (var i = 0; i< tops.length; i++) { %>
            <div>
              <div class="itemHeight">
                <div class="leftFloat largeWidth">
                  <a href="/admin/editItem/<%= tops[i].id %>">
                  <img src="/uploads/<%= tops[i].image %>"/>
                  </a>  
                  <div>
                    <span class="bold"><%= tops[i].name %><br></span>
                    <span><%= tops[i].description %><br></span>
                    <span><%= tops[i].offerDescription %><br></span>
                    <span>Cost : <%= tops[i].actualCost %><br></span>
                    <span>Get it for : <%= tops[i].offerCost %></span>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        </div>
        <div class="itemGrid">
          <div class="itemTitle">
            <span>Burgers</span>
          </div>
          <div class="grid">
            <% for (var i = 0; i< burgers.length; i++) { %>
              <div class="itemHeight leftFloat">
                <div class="leftFloat largeWidth">
                  <a href="/admin/editItem/<%= burgers[i].id %>">
                  <img src="/uploads/<%= burgers[i].image %>" onclick=""/>
                  </a>
                  <div>
                    <span class="bold"><%= burgers[i].name %><br></span>
                    <span><%= burgers[i].description %><br></span>
                    <span><%= burgers[i].offerDescription %><br></span>
                    <span>Cost : <%= burgers[i].actualCost %><br></span>
                    <span>Get it for : <%= burgers[i].offerCost %></span>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
          <div class="itemTitle">
            <span>Starters</span>
          </div>
          <div class="grid">
            <% for (i = 0; i< starters.length; i++) { %>
              <div class="itemHeight leftFloat">
                <div class="leftFloat largeWidth">
                  <a href="/admin/editItem/<%= starters[i].id %>">
                  <img src="/uploads/<%= starters[i].image %>"/>
                  </a>
                  <div>
                    <span class="bold"><%= starters[i].name %><br></span>
                    <span><%= starters[i].description %><br></span>
                    <span><%= starters[i].offerDescription %><br></span>
                    <span>Cost : <%= starters[i].actualCost %><br></span>
                    <span>Get it for : <%= starters[i].offerCost %></span>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
          <div class="itemTitle">
            <span>Drinks and Delights</span>
          </div>
          <div class="grid">
            <% for (i = 0; i< drinks.length; i++) { %>
              <div class="itemHeight leftFloat">
                <div class="leftFloat largeWidth">
                  <a href="/admin/editItem/<%= drinks[i].id %>">
                  <img src="/uploads/<%= drinks[i].image %>"/>
                  </a>
                  <div>
                    <span class="bold"><%= drinks[i].name %><br></span>
                    <span><%= drinks[i].description %><br></span>
                    <span><%= drinks[i].offerDescription %><br></span>
                    <span>Cost : <%= drinks[i].actualCost %><br></span>
                    <span>Get it for : <%= drinks[i].offerCost %></span>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>